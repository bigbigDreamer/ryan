---
import Layout from '../layouts/Layout.astro';
import HomePage from '../components/home/index'
---

<Layout title="Welcome to Astro.">
	<main class="bg-black">
		<HomePage client:only="react" />
	</main>
</Layout>

<script is:inline src="//unpkg.com/heti/umd/heti-addon.min.js"></script>
<script is:inline>
	const heti = new Heti('.heti');
	heti.autoSpacing(); // 自动进行中西文混排美化和标点挤压
</script>


<style>
	@font-face {
		font-family: "阿里妈妈灵动体 VF Thin";src: url("//at.alicdn.com/wf/webfont/yAgruuDib0Zh/kiG8ojkDGCWR.woff2") format("woff2"),
	url("//at.alicdn.com/wf/webfont/yAgruuDib0Zh/Bww7yQCS5XXn.woff") format("woff");
		font-display: swap;
	}
	main {
		max-width: 100vw;
		height: 100vh;
		overflow: hidden;
		display: flex;
		justify-content: center;
		font-family: "阿里妈妈灵动体 VF Thin",serif;
	}
</style>
